{
	"manifest_version": 3,
	"name": "My TypeScript Extension",
	"version": "1.0",
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"]
		}
	],
	"permissions": ["scripting", "tabs", "storage"]
}
