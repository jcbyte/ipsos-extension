{
	"manifest_version": 3,
	"name": "Ipsos Extension",
	"version": "1.0",
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://uk.ishopforipsos.com/*"],
			"js": ["content.js"],
			"run_at": "document_idle",
			"all_frames": true
		}
	],
	"permissions": ["storage"]
}
